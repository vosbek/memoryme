{
  "name": "devmemory-vscode",
  "displayName": "DevMemory",
  "description": "Capture and search development memories directly from VSCode",
  "version": "1.0.0",
  "publisher": "enterprise-dev",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Notebooks"
  ],
  "keywords": [
    "memory",
    "notes",
    "documentation",
    "knowledge",
    "developer-tools"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devmemory.quickCapture",
        "title": "Open DevMemory Panel",
        "category": "DevMemory"
      }
    ],
    "keybindings": [
      {
        "command": "devmemory.quickCapture",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m"
      }
    ],
    "configuration": {
      "title": "DevMemory",
      "properties": {
        "devmemory.autoCapture": {
          "type": "boolean",
          "default": false,
          "description": "Automatically capture code snippets when copying"
        },
        "devmemory.appPath": {
          "type": "string",
          "default": "",
          "description": "Path to DevMemory application executable"
        },
        "devmemory.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable DevMemory extension"
        },
        "devmemory.captureCommands": {
          "type": "boolean",
          "default": true,
          "description": "Capture terminal commands automatically"
        },
        "devmemory.captureFiles": {
          "type": "boolean",
          "default": true,
          "description": "Capture file changes automatically"
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^26.1.0",
    "spectron": "^19.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.5.0"
  }
}
